                                    <option value="sixeight">6'8"</option>
                                    <option value="sixnine">6'9"</option>
                                    <option value="sixten">6'10"</option>
                                    <option value="sixeleven">6'11"</option>

                                </select>
                            </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6 pr-0 tm-pl-xs-0">
                            <div class="input-field">
                                <input placeholder="Weight" id="weight" name="weight" type="text" >
                            </div>
                        </div>
                    </div>
                    <div class="text-right mt-4">
                        <input type="submit" value = "SUBMIT" class="waves-effect btn-large btn-large-white px-4 black-text" />
